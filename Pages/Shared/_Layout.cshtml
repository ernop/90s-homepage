<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/js/jquery.tablesorter.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>
    
</head>
<body>
    <header>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <hr />
            <form action="/search" method="post">
                <input type="text" name="term" id="term" placeholder="search" />
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
            <form action="/massadd" method="post">
                <input type="text" name="baseDir" id="baseDir" placeholder="path" />
                <button type="submit" class="btn btn-primary">MassAdd</button>
            </form>
            <form action="/image/search" method="post">
                <input type="text" name="term" id="imageterm" placeholder="image search" />
                <button type="submit" class="btn btn-primary">Imgsearch</button>
            </form>
            <div class="navigation">

                @Html.ActionLink("List", "List", "Admin")
                @Html.ActionLink("P", "ListPublished", "Admin")
                @Html.ActionLink("UP", "ListUnpublished", "Admin")
                @Html.ActionLink("ListAll", "ListAll", "Admin")
                @Html.ActionLink("TagList", "TagList", "Admin")
                @Html.ActionLink("Create", "CreateArticle", "Admin")
                <br />
                @Html.ActionLink("Upload Image", "UploadGet", "File")
                @Html.ActionLink("List Images", "ViewImages", "File")
                <br />@Html.ActionLink("Publications", "Index", "Publication")
                @Html.ActionLink("RP", "RandomPublished", "Admin")
                @Html.ActionLink("RU", "RandomUnpublished", "Admin")
                <form action="/publish" method="post">
                    <button type="submit" class="btn btn-primary">Publish All</button>
                </form>
            </div>
            @RenderBody()


        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site-local.js" asp-append-version="true"></script>
    <script src="~/js/site-public.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
